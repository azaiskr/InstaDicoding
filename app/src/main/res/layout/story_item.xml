<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_story"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_story_list"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/story_photos"
                android:scaleType="centerCrop"
                tools:src="@drawable/backgroung_large" />

            <TextView
                android:id="@+id/tv_username_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/dark_blue"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:textSize="16sp"
                tools:text="@string/label_username" />

            <TextView
                android:id="@+id/tv_desc_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:paddingHorizontal="16dp"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                tools:text="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>