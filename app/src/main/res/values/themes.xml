<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstaDicoding" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="actionBarStyle">@style/customActionBar</item>
        <item name="android:statusBarColor">@color/dark_blue</item>

    </style>

    <style name="customActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="titleTextStyle">@style/appBarCustomTitle</item>
    </style>


    <style name="appBarCustomTitle" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="Theme.InstaDicoding" parent="Base.Theme.InstaDicoding" />
</resources>